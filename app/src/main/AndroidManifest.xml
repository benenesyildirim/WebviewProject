<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tebrikmesaji.enesyildirimm.webviewproject">

    <uses-permission android:name="android.permission.INTERNET" />
    //internet izni alıyor.
    <application
        android:allowBackup="true"
        android:icon="@mipmap/aseicon"
        android:label="ASE Bilişim"
        android:roundIcon="@mipmap/aseicon"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">//Bu kısım tepedeki barı yok etmeye yarıyor.

        <activity android:name=".AndroidWebviewProject"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>